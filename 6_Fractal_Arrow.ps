% -----Variables(Ivgae) and Procedures------------
/depth 0 def

/maxDepth 10 def
/down {/depth depth 1 add def} def
/up {/depth depth 1 sub def} def

/doLine		
{ 0 144 rlineto currentpoint
 translate stroke  0 0 moveto} def
 
 /FractArrow
 {gsave .7 .7 scale		%reduce scale
  10 setlinewidth		%set line width
  down doLine	%print line
  depth maxDepth le			
   { 135 rotate FractArrow
	-270 rotate FractArrow } if
  up grestore} def
  
  % ------------Begin Program
  300 400 moveto
  FractArrow
  stroke 
  showpage

