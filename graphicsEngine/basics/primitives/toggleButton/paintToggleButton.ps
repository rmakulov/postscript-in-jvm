% ------------PROLOG------------%
/fillLeftRect {
    0 0 w 2 div h roundedRect stroke
    0 0 w 2 div h roundedRect fill
} def
%--------------------------------
/fillRightRect {
    w 2 div 0 w 2 div h roundedRect fill
    w 2 div 0 w 2 div h roundedRect stroke
} def

/printTextOff{
    shift w 2 div add shift 3 mul moveto
    0 0 0 setrgbcolor
    textOff show
} def

/printTextOn{
    shift 2 mul shift 3 mul moveto
    %0 126 203 setrgb
    %FireBrick setrgb
    White setrgb
    textOn show
} def


% ------------BEGIN------------%
gsave
    /isPressed exch def
    /textOff  exch def
    /textOn exch def
    /h exch def
    /w exch def
    /y exch def
    /x exch def

    x y translate
    /shift 5 def

    /kegel h 1.6 div cvi def
    /Rekha findfont kegel scalefont setfont


    .5 setlinewidth
    isPressed not
    {
     1 1 1 setrgbcolor
     fillRightRect
     185 193 193 setrgb
     fillLeftRect
     printTextOff

    }
    {
     %ForestGreen setrgb
     %NavajoWhite setrgb
     0 126 203  setrgb %blue
     30 156 233  setrgb %blue

        0 0 w h roundedRect fill
        0 0 0 setrgbcolor
        185 255 div 193 255 div 193 255 div setrgbcolor
        fillRightRect
        printTextOn
    }
    ifelse

    %97 255 div 151 255 div 249 255 div setrgbcolor
    0.501961 0.45098 0.501961 setrgbcolor

    0 0 w h roundedRect stroke

grestore
