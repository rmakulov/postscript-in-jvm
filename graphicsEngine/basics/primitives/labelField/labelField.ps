/labelField{
      /eventProcDict exch def
      /parent exch def
      /label exch def
      /h exch def
      /w exch def
      /y exch def
      /x exch def
      /name exch def
      %---parameters
                  name
                  x y w h
                  parent /x get
                  parent /y get
                  parent /w get
                  parent /h get
              getRelFromAbs
              label
              parent
              eventProcDict
      relLabelField

} def


/relLabelField {
              /eventProcDipact exch def
              /parent exch def
              /label exch def
              /rH exch def
              /rW exch def
              /rY exch def
              /rX exch def
              /name exch def
              /paint {/bd exch def
                          bd recountCoordinates

                          bd /isAttached get
                          {
                                bd /parent get /x get bd /dX get add
                                bd /parent get /y get bd /parent get /h get add bd /dY get add
                          }
                          { bd /x get bd /y get }
                          ifelse

                              bd /w get
                              bd /h get
                              bd /label get
                              bd
                          (graphicsEngine/basics/primitives/labelField/paintLabelField.ps) (r) file run
                          bd paintChildren
                  } def

              /labelFieldDict <</name                   name
                                /label                  label
                                /rX                     rX
                                /rY                     rY
                                /rW                     rW
                                /rH                     rH
                                /parent                 parent
                                /children               []

                                /x                      parent /x get parent /w get rX mul add cvi
                                /y                      parent /y get parent /h get rY mul add cvi
                                /h                      parent /h get rH mul cvi
                                /w                      parent /w get rW mul cvi

                                /inFocus                false
                                /isFixed                true

                                /isAttached             false
                                /dX                     0
                                /dY                     0
                                /angle                  [true false]

                                /paint                  /paint load
                                /eventProcs             eventProcDict


                                /color                  [0 0 0]
                                /kegel                  12
                                /refreshCoordinates     /recountCoordinates load
                                /objName                (LabelField)
                                /textFont               (Rekha)
                                /checkBelonging
                                                        {
                                                            1 dict begin
                                                              /element exch def
                                                              /evY exch def
                                                              /evX exch def

                                                              /x element /x get def
                                                              /y element /y get def
                                                              /w element /w get def
                                                              /h element /h get def

                                                              evX x ge evY y ge and
                                                              x w add evX ge y h add evY ge and
                                                              and
                                                            end
                                                        }
                         >> def

              labelFieldDict addElement

              labelFieldDict /eventProcs get /CLICK {  } addListToDict
              labelFieldDict /eventProcs get /PRESS {  } addListToDict
              labelFieldDict /eventProcs get /RELEASE {} addListToDict


              parent /children
                          parent /children get
                          labelFieldDict /number get
                          addToEndOfList
              put

              %labelFieldDict paint
              name labelFieldDict def
} def