/button {
    /eventProcDict exch def
    /parent exch def
    /label exch def
    /h exch def
    /w exch def
    /y exch def
    /x exch def
    /name exch def

        name
        x parent /x get sub parent /w get div
        y parent /y get sub parent /h get div
        w parent /w get div
        h parent /h get div
        label
        parent
        eventProcDict
    relButton
} def


/relButton {
    /eventProcDict exch def
    /parent exch def
    /label exch def
    /rH exch def
    /rW exch def
    /rY exch def
    /rX exch def
    /name exch def
    /paint {/bd exch def
                bd recountCoordinates
                bd /x get
                bd /y get
                bd /w get
                bd /h get
                bd /label get
                bd /isPressed get
                bd
                (graphicsEngine/basics/primitives/button/paintButton.ps) (r) file run
                bd paintChildren
        } def
        %eventProcs - procedures for each type of events
    /buttonDict <<      /name               name
                        /label              label
                        /parent             parent
                        /children           []
                        /rX                 rX
                        /rY                 rY
                        /rW                 rW
                        /rH                 rH

                        /x parent           /x get parent /w get rX mul add cvi
                        /y parent           /y get parent /h get rY mul add cvi
                        /h parent           /h get rH mul cvi
                        /w parent           /w get rW mul cvi

                        /inFocus            false
                        /paint              /paint load
                        /eventProcs         eventProcDict
                        /isPressed          false
                        /isClicked          false
                        /isFixed            true
                        /color              [1 0 0]
                        /objName            (Button)
                        /textFont               (Times-Roman)

                        /refreshCoordinates /recountCoordinates load
                        /checkBelonging
                                            {
                                                1 dict begin
                                                    /element exch def
                                                    /evY exch def
                                                    /evX exch def

                                                    /x element /x get def
                                                    /y element /y get def
                                                    /w element /w get def
                                                    /h element /h get def

                                                    evX x ge evY y ge and %%% evX > x && evY > y
                                                    x w add evX ge y h add evY ge and
                                                    and
                                                end
                                            }
    >> def



    buttonDict addElement


    %element - event, действие забирает один элемент со стека - графический элемент. В момент вызова процедуры в checkElement event.ps кладем buttonDict
    buttonDict /eventProcs get /RELEASE {
        /curDict exch def
        curDict /isPressed get
        {
            curDict /isClicked get not
            {
            %(not clicked) print
            %[ curDict ] curDict /eventProcs get (CLICK) get execListWithArg
            %(here) print
            }if
        }
        if
        curDict /isPressed false put repaint
     } addListToDict
    buttonDict /eventProcs get /PRESS {
        dup /isClicked false put
        /isPressed true put repaint
    } addListToDict

    buttonDict /eventProcs get /CLICK {
        /isClicked true put
        %(click) print
        %pop
    } addListToDict


    parent /children
        parent /children get
        buttonDict /number get
        addToEndOfList
    put

    %buttonDict paint
    name buttonDict def
} def