% ------------PROLOG------------%
/drawRect{

    0 0 moveto
    w 0 rlineto
    0 h rlineto
    w neg 0 rlineto
    closepath
    stroke
} def

/fillExtendedRect{

    0 h moveto
    w 0 rlineto
    0 labels length 1 add h mul neg rlineto
    w neg 0 rlineto
    closepath

    1 1 1 setrgbcolor
    fill
    0 0 0 setrgbcolor

} def

% ----- params: string
/drawString{

    shift shift moveto
    show

} def
%-----   prarms: labels
/drawOptions{
    dup length
    1 1
    3 2 roll
    { dup
      h mul neg /curH exch def
      shift curH shift add moveto
      get
      show
    }
    for

} def

% ------------BEGIN------------%
gsave
    /isPressed exch def
    /labels  exch def
    /h exch def
    /w exch def
    /y exch def
    /x exch def

    x y translate
    /shift 5 def

    /kegel h shift sub def
    /Rekha findfont kegel scalefont setfont

    drawRect
    isPressed
    {
        labels drawOptions
        fillExtendedRect
        %(None) drawString
    }
    { (None) drawString }
    ifelse

grestore
% ------------END------------%