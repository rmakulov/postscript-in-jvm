% ------------PROLOG------------%
%params : x y w h
/rect{
    /hR exch def
    /wR exch def
    /yR exch def
    /xR exch def

    xR yR moveto
    wR 0 rlineto
    0 hR rlineto
    wR neg 0 rlineto
    closepath
} def

/drawRect{
    0 0 w h rect
    stroke
} def


/fillExtendedRect{
    /extH labels length h mul def

    0 extH neg w extH rect

    1 1 1 setrgbcolor
    fill
    0 0 0 setrgbcolor

} def

% ----- params: string
/drawString{
    /str exch def
    /yS exch def
    /xS exch def

    xS yS moveto
    str show

} def
%-----
/drawOptions{
    /len labels length def


    1 1 len
    {
        /incr exch def
        incr h mul /curH exch def

        0 curH neg w h rect stroke
        shift curH neg shift add labels incr 1 sub get drawString
    }
    for

} def

% ------------BEGIN------------%
gsave
    /isPressed exch def
    /labels  exch def
    /h exch def
    /w exch def
    /y exch def
    /x exch def

    x y translate
    /shift 5 def

    /kegel h shift sub def
    /Rekha findfont kegel scalefont setfont

    drawRect
    isPressed
    {
        fillExtendedRect
        labels drawOptions
        shift shift (None) drawString
    }
    { shift shift (None) drawString }
    ifelse

grestore
% ------------END------------%