% ------------PROLOG------------%
%params : x y w h
/rect{
    /hR exch def
    /wR exch def
    /yR exch def
    /xR exch def

    xR yR moveto
    wR 0 rlineto
    0 hR rlineto
    wR neg 0 rlineto
    closepath
} def

/drawRect{
    0 0 w h rect
    stroke
} def

% ----- params: string
/drawString{
    /str exch def
    /yS exch def
    /xS exch def

    xS yS moveto
    str show

} def
%-----
/drawOptions{
    /len labels length def

    1 1 len
    {
        /incr exch def
        /invIncr len incr sub def

        /curH invIncr sH mul def

        gsave
        curLabel incr 1 sub eq
        {
            0 0 1 setrgbcolor
            0 curH w sH rect fill
            1 1 1 setrgbcolor
        }
        if

        shift curH shift add labels invIncr get drawString
        grestore
    }
    for

} def

% --------------------------------------BEGIN-----------------------------------------%
gsave

    /curLabel exch def
    /labels  exch def
    /h exch def
    /w exch def
    /y exch def
    /x exch def

    %/curLabel -2 def
    /sH h labels length idiv def

    x y translate
    /shift 5 def

    /kegel sH shift sub def
    /Rekha findfont kegel scalefont setfont

    drawRect
    labels drawOptions
    x neg y neg translate

grestore
% ------------END------------%