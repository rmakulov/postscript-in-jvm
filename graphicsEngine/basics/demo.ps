%-------------------------------------------
%-------params------------------------------
%    return     :   void
%-------------------------------------------------
%---save data to operand stack
%-------------------------------------------------

 /concatstrings % (a) (b) -> (ab)
   { exch dup length
     2 index length add string
     dup dup 4 2 roll copy length
     4 -1 roll putinterval
   } def

/saveData
{
    1 dict begin
    /report 1 dict def

        report /name nameField /text get put
        report /group group /text get put
        report /education education /labels get education /curLabel get get put
        report /faculty faculty /labels get faculty /curLabel get get put
        report /results results /isPressed get put
        report /errorChecking errorChecking  /isPressed get put
        %report print

        report /name  get userprint
        report /group get userprint
        report /education get userprint
        report /faculty get userprint


    end
} def
%-------------------------------------------
%-------params------------------------------
%   groupsNumb :    integer
%   return     :    boolean
%-------------------------------------------------
%---check if groupNumber is in [541, 542, 543, 544]
%-------------------------------------------------
/groupChecking
{
    1 dict begin
        /gnStr exch def
        gnStr length 0 eq
        {
            false
        }
        {
            /groupNumber gnStr cvi def

            groupNumber 544 eq
            groupNumber 543 eq
            or
            groupNumber 542 eq
            or
            groupNumber 541 eq
            or
            {true}
            {false}
            ifelse
        }
        ifelse
    end
} def

%-------------------------------------------
%-------params------------------------------
%   return     :    boolean
%-------------------------------------------------
%---check if results is pressed and save data if yes
%-------------------------------------------------
/exitFunction
{
    1 dict begin
    results /isPressed get
    {
        saveData
    }
    if
    end
} def

